<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_general_medicine_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add General Medicine" />

            <Button
                android:id="@+id/add_prescription_medicine_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Prescription Medicine" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/general_medicines_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General Medicines"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/general_medicines_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/prescription_medicines_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prescription Medicines"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/prescription_medicines_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout" />
</LinearLayout>
